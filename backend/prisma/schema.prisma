// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// === MODEL BARU: SATU DOKUMEN BERISI SEMUA DATA ===
model SensorLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId    String   // Contoh: "esp32_01"
  
  // Data Lingkungan
  lux         Float
  temperature Float
  humidity    Float
  
  // Data Gas & Suara
  mq2_adc     Float    // Nilai ADC Gas
  noise       Float    // Dari 'sound' (0/1 atau rata-rata)
  
  // Data Gerak & Api
  vibration   Float    // Status getaran
  uv_status   Float    // Dari 'uv' status
  
  // Waktu
  createdAt   DateTime @default(now())

  @@map("sensorLog") // Nama collection di MongoDB nanti
}